page {
  background-color: #fafafa;
  font-size: 16px;
  color: #353535;
  line-height: 1;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

/* lib */

.strong{
  font-weight: bold;
}
.tc{
  text-align: center;
}
.red-text {
  color: #f44;
}
.green-text {
  color: #4b0;
}
.flex {
  display: flex;
  align-items: center;
}
.flex-item {
  flex: 1;
}
.section-title {
  padding: 10px 15px;
  line-height: 24px;
  font-size: 14px;
  color: #606266;
}
.common-btn {
  font-size: 16px;
  line-height: 44px;
  height: 44px;
  border-radius: 22px;
  background-color: #6441A5;
  box-sizing: border-box;
  color: #fff;
}
.common-btn-line {
  line-height: 44px;
  height: 44px;
  border-radius: 50%;
  border: 2px solid #6441A5;
  box-sizing: border-box;
  color: #6441A5;
}

.common-btn[disabled] {
  color: #909399 ! important;
  background: #eee ! important;
  border-color: #DCDFE6 ! important;
  pointer-events:none;
  cursor: not-allowed ! important;
  opacity: 1 ! important;
}
.common-btn[disabled]::after {
  border-color: #DCDFE6 ! important;
}

.common-btn:after {
  border: none; 
}

