.qs-container {
  padding: 48px 15px 15px;
  position: relative;
  /* font-size: 14px; */
  line-height: 24px;
  background-color: #fff;
  overflow: hidden;
}
.qs-container .num-sort {
  font-size: 12px;
  padding-top: 24px;
  position: absolute;
  top: -25px;
  left: 50%;
  margin-left: -25px;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: #fafafa;
  text-align: center;
  box-sizing: border-box;
}
.qs-container .qs {
  margin-bottom: 20px;
}
.qs-container .tag {
  box-sizing: border-box;
  float: left;
  font-size: 12px;
  margin-right: 4px;
  padding: 0 4px;
  line-height: 20px;
  border-radius: 12px 12px 0 12px;
  background-color: #6441A5;
  color: #fff;
}

.select-item {
  line-height: 24px;
  padding-top: 10px;
  padding-bottom: 10px;
  padding-left: 20px;
  border-radius: 4px;
  position: relative;
  background-color: #fafafa;
}
.select-item + .select-item {
  margin-top: 15px;
}

.parsing {
  margin-top: 10px;
  background-color: #fff;
  padding: 0px 15px 64px;
}
.parsing .header {
  display: flex;
  padding: 20px 0;
}
.parsing .red-text {
  margin-left: 4px;
  flex: 1;
}
.parsing .body {
  margin-top: 20px;
  font-size: 14px;
}
.parsing  .sub-title{
  color: #909399;
  margin-bottom: 6px;
}
.parsing .sub-dsc {
  line-height: 24px;
}

.submit-btn-wrap {
  padding: 10px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.submit-btn {
  width: 80%;
}